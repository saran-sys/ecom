
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h1 class="text-center">Welcome to Our E-Commerce Store!</h1>
    <p class="text-center">Shop the best products at amazing prices. Your one-stop shop for everything you need.</p>

    <!-- Featured Products Section -->
    <h2 class="mt-5">Featured Products</h2>
    <div class="row">
        <div class="col-md-3" *ngFor="let product of products">
            <div class="card">
                <img src="/images/sample-product.jpg" class="card-img-top" alt="Product Image">
                <div class="card-body text-center">
                    <h5 class="card-title">Product Name</h5>
                    <p class="card-text">$100.00</p>
                    <a href="/Product/Details/1" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <h2 class="mt-5">Shop by Categories</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="/images/category1.jpg" class="card-img-top" alt="Category 1">
                <div class="card-body text-center">
                    <h5 class="card-title">Category 1</h5>
                    <a href="/Category/1" class="btn btn-secondary">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="/images/category2.jpg" class="card-img-top" alt="Category 2">
                <div class="card-body text-center">
                    <h5 class="card-title">Category 2</h5>
                    <a href="/Category/2" class="btn btn-secondary">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="/images/category3.jpg" class="card-img-top" alt="Category 3">
                <div class="card-body text-center">
                    <h5 class="card-title">Category 3</h5>
                    <a href="/Category/3" class="btn btn-secondary">Explore</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Promotions Section -->
    <h2 class="mt-5">Special Offers</h2>
    <div class="alert alert-success text-center">
        <h4>Flat 50% Off on All Electronics!</h4>
        <p>Hurry, offer valid till stock lasts.</p>
        <a href="/Offers" class="btn btn-danger">Shop Now</a>
    </div>
</div>
