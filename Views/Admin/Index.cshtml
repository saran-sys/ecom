@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h1 class="text-center">Welcome to the Admin Dashboard</h1>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">
                    Total Products
                </div>
                <div class="card-body">
                    <h5 class="card-title">120</h5>
                    <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-primary">Manage Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">
                    Total Orders
                </div>
                <div class="card-body">
                    <h5 class="card-title">45</h5>
                    <a href="@Url.Action("ViewOrders", "Admin")" class="btn btn-success">View Orders</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header">
                    User Management
                </div>
                <div class="card-body">
                    <h5 class="card-title">150 Users</h5>
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-warning">Manage Users</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h2 class="text-center">Recent Orders</h2>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Status</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#001</td>
                    <td>John Doe</td>
                    <td>Shipped</td>
                    <td>$250</td>
                    <td><a href="@Url.Action("OrderDetails", "Admin", new { id = 1 })" class="btn btn-info">View</a></td>
                </tr>
                <tr>
                    <td>#002</td>
                    <td>Jane Smith</td>
                    <td>Pending</td>
                    <td>$120</td>
                    <td><a href="@Url.Action("OrderDetails", "Admin", new { id = 2 })" class="btn btn-info">View</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
